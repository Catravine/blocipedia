<h1>All Wikis</h1>


<div class="row">
  <div class="col-md-8">
    <ul class="all-wikis">
      <% @wikis.each do |wiki| %>
        <li><%= link_to wiki.title, wiki_path(wiki.id) %></li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-4">
    <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-primary' %>
    <% if current_user.premium? %>
      <%= link_to 'Downgrade account', downgrade_account_path(user_id: current_user.id), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
